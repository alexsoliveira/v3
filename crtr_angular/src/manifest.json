{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "TGS Leitor Certificados",
  "description": "Extensão para utilização de leitura de certificados digitais em páginas web",
  "author": "Thomas Greg & Sons",
  "browser_action": {
    "default_icon": {
      "16": "assets/images/16.png",
      "48": "assets/images/48.png",
      "128": "assets/images/128.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js", "runtime.js"]
  },
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "permissions": [
    "nativeMessaging",
    "http://*/",
    "https://*/"
  ]
}
